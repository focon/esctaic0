<center><h1>Esctaic publications list</h1></center>

<table class="sample">
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Category</th>
	  </tr>

<% for publication in @publications %>
  <tr><td><%=h publication.author %></td>
     <td><a href="http://<%=h publication.url %>"><%=h publication.title %></a></td>
    <td><%=h publication.category %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @publications %>
<%= link_to 'Home', publications_path %>|


